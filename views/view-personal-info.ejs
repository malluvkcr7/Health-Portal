<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Personal Information</title>
    <!-- Include Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Custom CSS for Personal Information table */
        .navbar {
            background-color: #6a64f1; /* Change the background color to blue */
        }
        .navbar-brand {
            color: #ffffff !important; /* Change the brand text color to white */
            font-weight: bold;
        }
        .navbar-toggler-icon {
            background-color: white; /* Change the color of the toggler icon */
        }
        .navbar-dark .navbar-nav .nav-link {
            color: #ffffff !important; /* Change the links text color to white */
        }
        .navbar-dark .navbar-nav .nav-link:hover {
            color: #f8f9fa !important; /* Change the link text color on hover */
        }
        body {
            background-color: #f8f9fa;
        }

        .container {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        }

        h1 {
            color: #343a40;
            margin-bottom: 20px;
        }

        .table {
            background-color: #ffffff;
        }

        th, td {
            text-align: center;
            vertical-align: middle;
        }

        /* Box-like styling for table rows */
        tr {
            border: 1px solid #dee2e6;
            background-color: #f5f5f5;
        }

        .btn-back {
            margin-top: 20px;
        }
        .remarks-section {
            padding: 20px;
            background-color: #f5f5f5;
            border-radius: 5px;
            box-sizing: border-box; /* Ensure padding doesn't affect width */
            margin-bottom: 20px;
        }

        /* Textarea styling for doctor's remarks */
        textarea {
            width: 100%;
            min-height: 100px;
            padding: 10px;
        }
        .medication-table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        .medication-table th,
        .medication-table td {
            padding: 10px;
            text-align: center;
        }

        .medication-table th {
            background-color: #343a40;
            color: #ffffff;
        }

        .medication-table tr:nth-child(even) {
            background-color: #f5f5f5;
        }
        .medication-input {
            width: 100%;
            margin-bottom: 10px;
            padding: 5px;
        }
        .add-medication-btn {
            display: inline-block;
            margin-top: 10px;
            padding: 10px 20px;
            background-color: #007bff;
            color: #fff;
            border: none;
            cursor: pointer;
        }
        .submit-records-btn {
            background-color: #007bff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary"> <!-- Change bg-light to bg-primary -->
        <a class="navbar-brand" href="/doctordash.html">Care Beyond Boundaries</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-end" id="navbarNav"> <!-- Add justify-content-end class -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/viewappointments">View-Appointments</a>
                </li>
              
                
                <li class="nav-item">
                    <a class="nav-link" href="/logout1">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <form action="/submit-records" method="POST">
        <div class="container">
            <h1>Personal Information</h1>

            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Field</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Replace these rows with your personal information fields -->
                    <tr>
                        <td><strong>Name</strong></td>
                        <td><%= personalInfo.name %></td>
                    </tr>
                    <tr>
                        <td><strong>Date of Birth</strong></td>
                        <td><%= personalInfo.dob.toDateString() %></td>
                    </tr>
                    <tr>
                        <td><strong>Weight (kg)</strong></td>
                        <td><%= personalInfo.weight %></td>
                    </tr>
                    <tr>
                        <td><strong>Height (cm)</strong></td>
                        <td><%= personalInfo.height %></td>
                    </tr>
                    <tr>
                        <td><strong>Gender</strong></td>
                        <td><%= personalInfo.gender %></td>
                    </tr>
                
                    <tr>
                        <td><strong>Allergies</strong></td>
                        <td><%= personalInfo.allergies %></td>
                    </tr>
                    <tr>
                        <td><strong>Surgeries</strong></td>
                        <td><%= personalInfo.surgeries %></td>
                    </tr>
                    <tr>
                        <td><strong>Medications</strong></td>
                        <td><%= personalInfo.medications %></td>
                    </tr>
                    <tr>
                        <td><strong>Alcohol Consumption</strong></td>
                        <td><%= personalInfo.alcohol %></td>
                    </tr>
                    <tr>
                        <td><strong>Smoking Habits</strong></td>
                        <td><%= personalInfo.smoking %></td>
                    </tr>
                    <tr>
                        <td><strong>Caffeine Consumption</strong></td>
                        <td><%= personalInfo.caffeine %></td>
                    </tr>
                    <!-- Add more rows for other personal information fields -->
                </tbody>
            </table>
            <div class="remarks-section">
                <h2>Doctor's Remarks</h2>
                <!-- Textarea for doctor's remarks -->
                <textarea id="doctorRemarks" name="doctorRemarks" rows="4" placeholder="Enter your remarks here"></textarea>
            </div>
            <div>
                <h2>Prescribed Medications</h2>
                <input type="text" id="medicine" class="form-control medication-input" placeholder="Medicine">
                <input type="text" id="dosage" class="form-control medication-input" placeholder="Dosage">
                <button id="addMedication" type="button" class="btn btn-primary">Add Medication</button>
                <table class="medication-table">
                    <thead>
                        <tr>
                            <th>Medicine</th>
                            <th>Dosage</th>
                        </tr>
                    </thead>
                    <tbody id="medicationTable">
                        <!-- Medications will be dynamically added here -->
                    </tbody>
                </table>
                <!-- Hidden input field to store medications data -->
                <input type="hidden" id="medicationsInput" name="medications" />
            </div>
        </div>

        <!-- Include Bootstrap JS and any other necessary scripts -->
        <!-- Include Bootstrap JS and any other necessary scripts -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.min.js"></script>
<script>
    // JavaScript to handle adding medications to the table
    function capitalizeSentences(inputId) {
        var inputElement = document.getElementById(inputId);
        var inputValue = inputElement.value;

        // Split the input text into sentences using periods followed by spaces as separators
        var sentences = inputValue.split('. ');

        // Capitalize the first letter of each sentence and join them back together
        for (var i = 0; i < sentences.length; i++) {
            sentences[i] = sentences[i].charAt(0).toUpperCase() + sentences[i].slice(1);
        }

        // Update the input value with the capitalized sentences
        inputElement.value = sentences.join('. ');
    }

    // Listen for the form submission event
    document.querySelector('form').addEventListener('submit', function (e) {
        // Capitalize the sentences in the doctor's remarks textarea
        capitalizeSentences('doctorRemarks');
    });
    document.addEventListener("DOMContentLoaded", function () {
        const addMedicationButton = document.getElementById("addMedication");
        const medicationTable = document.getElementById("medicationTable");
        const medicationsInput = document.getElementById("medicationsInput");

        const medications = []; // Array to store medications

        addMedicationButton.addEventListener("click", function () {
            const medicineInput = document.getElementById("medicine");
            const dosageInput = document.getElementById("dosage");

            const medicine = medicineInput.value.trim();
            const dosage = dosageInput.value.trim();

            if (medicine && dosage) {
                // Create a new row in the table
                const row = document.createElement("tr");
                row.innerHTML = `
                    <td>${medicine}</td>
                    <td>${dosage}</td>
                `;

                // Add the row to the table
                medicationTable.appendChild(row);

                // Add the medication to the array
                medications.push({ medicine, dosage });

                // Update the hidden input field with medications data
                medicationsInput.value = JSON.stringify(medications);

                // Clear the input fields
                medicineInput.value = "";
                dosageInput.value = "";
            }
        });
    });
</script>
<button type="submit" class="btn btn-primary">Submit Records</button>

       
    </form>
</body>
</html>
