<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Medical Records</title>
    <!-- Include Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<style> 
    /* Add custom CSS styles */
    .container {
        margin-top: 30px;
    }
    .form-heading {
        font-size: 24px;
        text-align: center;
        margin-bottom: 20px;
    }
    .navbar {
        background-color: #6a64f1; /* Change the background color */
    }
    .navbar-brand {
        color: rgb(199, 26, 26) !important; /* Change the brand text color to white */
        font-weight: bold;
    }
    .navbar-toggler-icon {
        background-color: white; /* Change the color of the toggler icon */
    }
    .navbar-dark .navbar-nav .nav-link {
        color: white !important; /* Change the links text color to white */
    }
    .navbar-dark .navbar-nav .nav-link:hover {
        color: #f8f9fa !important; /* Change the link text color on hover */
    }
    /* Add additional custom styles */
    body {
        background-color: #cb2323; /* Set a background color for the body */
    }
    .container {
        background-color: #fff; /* Set a background color for the content container */
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1); /* Add a subtle shadow to the container */
    }
    h1 {
        color: #333; /* Change the heading color */
        text-align: center;
        margin-bottom: 20px;
    }
    .col-md-6 {
        margin-top: 20px;
    }
    textarea.form-control {
        height: 150px; /* Adjust the height of the textarea */
    }
    table.table {
        margin-top: 20px;
    }
</style>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/patientdash.html">Care Beyond Boundaries</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/appointments">Appointments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/medical-records">Medical Records</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/remarks">Remarks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container mt-4">
        <% if (records.length > 0) { %>
            <!-- Display records if there are any -->
            <h1>Remarks</h1>
            <% records.forEach(function(record) { %>
                <div class="row mt-4">
                    <div class="col-md-6">
                        <!-- Display Remarks -->
                        <h3>Doctor's Remarks</h3>
                        <textarea class="form-control" readonly><%= record.doctorRemarks %></textarea>
                    </div>
                    <div class="col-md-6">
                        <!-- Display Medicines and Dosage in a Table -->
                        <h3>Medicines and Dosage</h3>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Medicine</th>
                                    <th>Dosage</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% record.prescriptions.forEach(function(prescription) { %>
                                    <tr>
                                        <td><%= prescription.medicine %></td>
                                        <td><%= prescription.dosage %></td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="text-center mt-5">
                <b style="font-size: 20px; color: #555;">Please wait until your doctor updates your records.</b>
            </div>
            
        <% } %>
    </div>
</body>
</html>
