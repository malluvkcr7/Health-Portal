<!-- patient-appointments.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Include your meta tags and CSS styles -->
    <!-- ... -->
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment</title>
    <!-- Add Bootstrap CSS link -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Add your custom CSS -->
    <style>
        /* Add custom CSS styles */
        .container {
            margin-top: 30px;
        }
        .form-heading {
            font-size: 24px;
            text-align: center;
            margin-bottom: 20px;
        }
        .navbar {
            background-color: #6a64f1; /* Change the background color */
        }
        .navbar-brand {
            color: rgb(199, 26, 26) !important; /* Change the brand text color to white */
            font-weight: bold;
        }
        .navbar-toggler-icon {
            background-color: white; /* Change the color of the toggler icon */
        }
        .navbar-dark .navbar-nav .nav-link {
            color: white !important; /* Change the links text color to white */
        }
        .navbar-dark .navbar-nav .nav-link:hover {
            color: #f8f9fa !important; /* Change the link text color on hover */
        }
       
    </style>
</head>
<body>
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/patientdash.html">Care Beyond Boundaries</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/appointments">Appointments</a>
                </li>
               
                <li class="nav-item">
                    <a class="nav-link" href="/medical-records">Medical Records</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/patient-records">Remarks</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Logout</a>
                </li>
            </ul>
        </div>
    </nav>



    <!-- Include your navigation bar (similar to the previous example) -->

    <div class="container">
        <h1 class="form-heading">Your Scheduled Appointments</h1>
        <div class="row">
            <% if (appointments.length === 0) { %>
                <p>No appointments scheduled.</p>
            <% } else { %>
                <% appointments.forEach(function(appointment) { %>
                    <div class="col-md-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Appointment with <%= appointment.specialist %></h5>
                                <p class="card-text">Date: <%= appointment.date %></p>
                                <p class="card-text">Time: <%= appointment.time %></p>
                                <p class="card-text">Problem: <%= appointment.problem %></p>
                            </div>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>
    </div>

    <!-- Include Bootstrap JS scripts (similar to the previous example) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
