    <script>
        // JavaScript to fetch and display appointments with AJAX
        function capitalizeSentences(inputId) {
        var inputElement = document.getElementById(inputId);
        var inputValue = inputElement.value;

        // Split the input text into sentences using periods followed by spaces as separators
        var sentences = inputValue.split('. ');

        // Capitalize the first letter of each sentence and join them back together
        for (var i = 0; i < sentences.length; i++) {
            sentences[i] = sentences[i].charAt(0).toUpperCase() + sentences[i].slice(1);
        }

        // Update the input value with the capitalized sentences
        inputElement.value = sentences.join('. ');
    }

    // Listen for the form submission event
    document.querySelector('form').addEventListener('submit', function (e) {
        e.preventDefault(); // Prevent the form from submitting immediately

        // Call the capitalizeSentences function for specific textareas
        capitalizeSentences('problem');

        // Now, you can submit the form or perform other actions
        this.submit();
    });

    

    </script>
